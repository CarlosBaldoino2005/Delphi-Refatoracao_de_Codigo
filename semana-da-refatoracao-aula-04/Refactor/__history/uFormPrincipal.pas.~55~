unit uFormPrincipal;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs,
  Data.DB,
  Vcl.StdCtrls,
  Vcl.Grids,
  Vcl.DBGrids,
  Vcl.ExtCtrls,
  System.UITypes,
  Refactor.Model.DAO.Categoria,
  Refactor.Model.DAO.Interfaces,
  Refactor.Model.Entities.Categoria,
  Refactor.View.Pages.Users,
  Refactor.Controller.Interfaces;

type
  TForm1 = class(TForm)
    DBGrid1: TDBGrid;
    DataSource1: TDataSource;
    Button1: TButton;
    Edit1: TEdit;
    Image1: TImage;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Button5: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button5Click(Sender: TObject);
  private
    { Private declarations }
    FDAO : iController;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

uses
  Refactor.Controller;

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
  FDAO.Categorias.Get;
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
  FDAO.Categorias.This.DESCRICAO := Edit1.Text;
  FDAO.Categorias.This.ICONE := Image1.Picture.Bitmap;
  FDAO.Categorias.This.INDICE_ICONE := 1;
  FDAO.Categorias.Insert;
  FDAO.Categorias.Get;
end;

procedure TForm1.Button3Click(Sender: TObject);
begin
  FDAO.Categorias.This.ID_CATEGORIA := DataSource1.DataSet.FieldByName('ID_CATEGORIA').AsInteger;
  FDAO.Categorias.This.DESCRICAO := Edit1.Text;
  FDAO.Categorias.This.ICONE := Image1.Picture.Bitmap;
  FDAO.Categorias.This.INDICE_ICONE := 1;
  FDAO.Categorias.Update;
  FDAO.Categorias.Get;
end;

procedure TForm1.Button4Click(Sender: TObject);
begin
  FDAO.Categorias.This.ID_CATEGORIA := DataSource1.DataSet.FieldByName('ID_CATEGORIA').AsInteger;
  FDAO.Categorias.Delete;
  FDAO.Categorias.Get;
end;

procedure TForm1.Button5Click(Sender: TObject);
begin
  PageUsers.Show;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  FDAO := TController.New;
  FDAO.Categorias.DataSet(DataSource1);
end;

end.
